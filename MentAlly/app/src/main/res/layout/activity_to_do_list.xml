<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/triangle_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="false"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="To Do List"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/common_google_signin_btn_text_dark_default"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:background="#FCF2FF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="   Buy Groceries"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/complete_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/complete_task" />

            <ImageView
                android:id="@+id/delete_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/delete_task" />

            <ImageView
                android:id="@+id/info_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/info_task" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:background="#FCF2FF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="   Walk the Dog"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/complete_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/complete_task" />

            <ImageView
                android:id="@+id/delete_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/delete_task" />

            <ImageView
                android:id="@+id/info_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/info_task" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:background="#FCF2FF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="   Finish Homework"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/complete_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/complete_task" />

            <ImageView
                android:id="@+id/delete_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/delete_task" />

            <ImageView
                android:id="@+id/info_task"
                android:layout_width="48dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:srcCompat="@drawable/info_task" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="94dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/add_task" />
    </LinearLayout>

</LinearLayout>