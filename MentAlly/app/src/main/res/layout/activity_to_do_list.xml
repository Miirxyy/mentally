<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.ToDoList.ToDoListActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="132dp"
        android:layout_height="69dp"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        app:srcCompat="@drawable/app_logo2" />

    <ImageView
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        app:srcCompat="@drawable/to_do_list" />


    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#972196F3"
        android:text="+"
        android:textSize="25dp"></Button>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/viewCompletedButton"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:backgroundTint="#9219D5F0"
            android:text="My Completed Tasks"></Button>

        <Button
            android:id="@+id/viewIncompletedButton"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:backgroundTint="#5BCEDF"
            android:text="My Pending Tasks"></Button>
    </LinearLayout>

    <ListView
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#63B2F0F8"
        android:textSize="15dp" />

    <Button
        android:id="@+id/delete_list_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Delete List"></Button>

</LinearLayout>